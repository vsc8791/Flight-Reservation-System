



   <h1 style="color:blueviolet"><u>Student Login</u></h1>

<form action="" method="post">
    <div class="form-group">
        <label for="email">USERNAME:</label>
        <input type="text" class="form-control" id="uname" name="uname">
    </div>
    <div class="form-group">
        <label for="pwd">PASSWORD:</label>
        <input type="password" class="form-control" id="psw" name="psw">
    </div>
    <div class="checkbox">
        <label><input type="checkbox"> Remember me</label>
    </div>
    <button type="submit" class="btn btn-default">SUBMIT</button>
</form>

   @if (ViewData["error"] != null)
   {
    <h1 align="center" style="color:red;background-color:gainsboro">@ViewData["error"]</h1>
    <h3><a href="/Student/StudentRegistration">Registration First</a></h3>
   }




