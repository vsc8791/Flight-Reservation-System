@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3 align="right"><a href="/Admin/Logout">LOGOUT</a></h3>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
