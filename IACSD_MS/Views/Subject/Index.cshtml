@model IEnumerable<BOL.Subject>

@{
    ViewBag.Title = "Index";
}
<h3 align="right"><a href="/Admin/Logout">LOGOUT</a></h3>
<h1 align="center" style="color:blueviolet;border:groove">Subject List</h1>

<h3 align="right">
    @Html.ActionLink("Enter New Subject Details", "Create")
</h3>
<table class="table">
    <tr><th>
    @Html.DisplayNameFor(model => model.SubjectId)
</th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectReferences)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectReferences)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SubjectId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SubjectId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SubjectId })
        </td>
    </tr>
}

</table>
