
@{
    ViewBag.Title = "Home Page";
}
<head>
    <title> Home</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="jumbotron">
        <h1 align="center" style="font-family:Algerian">IACSD MANAGEMENT SYSTEM</h1>
        <p class="lead"></p>

    </div>
    <div class="container" style="padding-left: 45px; padding-right: 210px;">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">

                    <img src="~/Images/download.jpg" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Images/images.jpg" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Images/logo.gif" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Images/main-qimg-6116df3cd1bf3800ed5c0de20701a268-c.jpg" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Images/Laboratory.jpg" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>



    
    @if (ViewData["LogoutMessage"] != null)
    {
        <h1 align="center" style="color:red;background-color:gainsboro">@ViewData["LogoutMessage"]</h1>
    }

    <h1 align="center" style="color:blue;margin-left:30px;font-family:Algerian"><u><strong>WELCOME TO IACSD</strong></u></h1>

    <h3><a href="/Faculty/FacultyRegistration">Faculty Registration</a></h3>
    <h3><a href="/Student/StudentRegistration">Student Registration</a></h3>

    <table align="center" style="color:magenta; background-color:gainsboro" border="1">
        <tr>
            <td>
                <img src="~/Images/AdminLogin.gif" alt="Admin Login" height="300px" width="400px" />
            </td>
            <td>
                <img src="~/Images/StudentLogin.jpg" alt="Student login" height="300px" width="400px" />
            </td>
            <td>
                <img src="~/Images/FacultyLogin.png" alt="FacultyLogin" height="300px" width="400px" />
            </td>


        </tr>
        <tr>
            <td>
                <h3 align="center">  <a href="/Admin/AdminLogin">ADMIN LOGIN</a></h3>
            </td>
            <td>
                <h3 align="center">  <a href="/Student/StudentLogin"> STUDENT LOGIN</a></h3>
            </td>
            <td>
                <h3 align="center"> <a href="/Faculty/FacultyLogin"> FACULTY LOGIN</a></h3>
            </td>
        </tr>



    </table>
</body>